{
    "compilerOptions": {
        "rootDir": "src/",
        "outDir": "dist/",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "target": "es5",
        "module":"es2015",
        "lib": ["es2015", "es2016", "es2017"],
        "typeRoots": [
            "node_modules/@types/*"
        ]
    },
    "include": [
        "src"
    ]
}